

<div class="row">
    <div class="col-sm-12">
        <div id="app" class="ibox">
            <div class="ibox-content">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-1" for="Name">产品名</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" v-model="form.Name" />
                        </div>
                        <label class="control-label col-sm-1" for="ImgUrl">图片路径</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" v-model="form.ImgUrl" />
                        </div>
                        <label class="control-label col-sm-1" for="Price">价格</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" v-model="form.Price" />
                        </div>
                        <label class="control-label col-sm-1" for="Stock">库存</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" v-model="form.Stock" />
                        </div>
                        <label class="control-label col-sm-1" for="Category">分类</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control" v-model="form.Category" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="ibox-footer">
                <div class="row">
                    <div class="col-sm-2 col-sm-offset-2">
                        <button class="btn btn-success btn-outline" @@click="add"><i class="fa fa-plus"></i>添加</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="ibox">
            <div class="ibox-content">
                <table id="myTable" class="table table-hover"></table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Biz/productManager.js">

    </script>
}

@section styles{
    <style>
        .order-body {
            width:900px;
            margin:0 auto;
            background-color:rgba(255, 255, 255,0.7)

        }
    .paytype-img {
        width:120px;
        height:100px
    }
    </style>
}
<div class="order-body">
    <i-Form ref="formValidate" style="background-color:#fff;padding:20px" model="formValidate" rules="ruleValidate" label-width="80">
        <Steps current="1" style="padding:20px">
            <Step title="已完成" content="这里是该步骤的描述信息"></Step>
            <Step title="进行中" content="这里是该步骤的描述信息"></Step>
            <Step title="待进行" content="这里是该步骤的描述信息"></Step>
            <Step title="待进行" content="这里是该步骤的描述信息"></Step>
        </Steps>
        <h2>填写并核对订单信息</h2>
        <Collapse v-model="collapseValue">
            <Panel name="1">
                地址信息
                <p slot="content">
                    <Form-item label="省级" prop="name">
                        <i-Select>
                            <i-Option v-for="item in cityList" value="item.value">{{ item.label }}</i-Option>
                        </i-Select>
                    </Form-item>
                    <Form-item label="城市" prop="name">
                        <i-Select>
                            <i-Option v-for="item in cityList" :value="item.value">{{ item.label }}</i-Option>
                        </i-Select>
                    </Form-item>
                    <Form-item label="区域" prop="name">
                        <i-Select>
                            <i-Option v-for="item in areaList" value="item.value">{{ item.label }}</i-Option>
                        </i-Select>
                    </Form-item>
                    <Form-item label="详细地址" prop="name">
                        <i-Input placeholder="请输入详细地址"></i-Input>
                    </Form-item>
                </p>
            </Panel>
            <Panel name="2">
                收件人信息
                <p slot="content">
                    <Form-item label="姓名" prop="name">
                        <i-Input placeholder="请输入姓名"></i-Input>
                    </Form-item>
                    <Form-item label="手机" prop="name">
                        <i-Input placeholder="请输入手机"></i-Input>
                    </Form-item>
                    <Form-item label="身份证" prop="name">
                        <i-Input placeholder="请输入身份证"></i-Input>
                    </Form-item>
                </p>
            </Panel>
            <Panel name="3">
                产品信息
                <p slot="content">
                    <i-table border :columns="columns1" :data="data1"></i-table>
                </p>
            </Panel>
            <Panel name="4">
                支付方式
                <p slot="content">
                    <Form-item label="选择" prop="name">
                        <Radio-group v-model="paytype">
                            <Radio label="weixin">
                                <img class="paytype-img" src="~/Content/images/weixin.jpg"/>
                            </Radio>
                            <Radio label="zhifubao">
                                <img class="paytype-img" src="~/Content/images/zhifubao.jpg" />
                            </Radio>
                            <Radio label="yinlian">
                                <img class="paytype-img" src="~/Content/images/yinlian.jpg" />
                            </Radio>
                        </Radio-group>
                    </Form-item>
                </p>
            </Panel>
            <Panel name="5">
                信息
                <p slot="content">
                    <Form-item>
                        <i-Button type="primary">提交订单</i-Button>
                        <i-Button type="ghost" style="margin-left: 8px">重置</i-Button>
                    </Form-item>
                </p>
            </Panel>
        </Collapse>
        
       
    </i-Form>
</div>
@section scripts{
    <script src="~/Scripts/Biz/order.js"></script>
}
